<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/primary">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:transitionName="@string/transition_app_icon"
                tools:src="@drawable/ic_android"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                tools:text="APK Manager"/>

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                tools:text="1.0.0"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/packageCardView"
        android:layout_width="match_parent"
        android:layout_height="46sp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_googleplay"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/horizontal_margin"/>

            <TextView
                android:id="@+id/packageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:layout_marginRight="@dimen/horizontal_margin"
                tools:text="com.skylar.apkmanager"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/packageCardView">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <android.support.v7.widget.CardView
                android:id="@+id/runAppCardView"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:text="@string/dialog_run"
                    android:textSize="25sp" />
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/horizontal_description_margin"
                    android:layout_marginRight="@dimen/horizontal_description_margin"
                    android:layout_marginTop="50dp"
                    android:text="@string/dialog_run_description"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/uninstallCardView"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:text="@string/dialog_uninstall"
                    android:textSize="25sp" />
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/horizontal_description_margin"
                    android:layout_marginRight="@dimen/horizontal_description_margin"
                    android:layout_marginTop="50dp"
                    android:text="@string/dialog_uninstall_description"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/removeCacheCardView"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:text="@string/dialog_cache"
                    android:textSize="25sp" />
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/horizontal_description_margin"
                    android:layout_marginRight="@dimen/horizontal_description_margin"
                    android:layout_marginTop="50dp"
                    android:text="@string/dialog_cache_description"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/clearDataCardView"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:text="@string/dialog_clear_data"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/horizontal_description_margin"
                    android:layout_marginRight="@dimen/horizontal_description_margin"
                    android:layout_marginTop="50dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-thin"
                    android:singleLine="true"
                    android:text="@string/dialog_clear_data_description"
                    android:textSize="14sp"/>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/fab_layout"
            layout="@layout/fab_multipe"/>

    </FrameLayout>

</RelativeLayout>